{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Dev Server",
			"type": "shell",
			"command": "npm run dev",
			"isBackground": true,
			"runOptions": {
				"runOn": "folderOpen"
			},
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"clear": true,
				"focus": false
			},
			"options": {
				"env": {
					"NODE_ENV": "development"
				}
			}
		},
		{
			"label": "Run Tests",
			"type": "shell",
			"command": "npm run test:no-e2e",
			"isBackground": false,
			"problemMatcher": [],
			"group": "test"
		},
		{
			"label": "Test Full Regression",
			"type": "shell",
			"command": "npm test -- test/regression/openaiService.baseline.test.js --verbose",
			"isBackground": false,
			"problemMatcher": [],
			"group": "test"
		},
		{
			"label": "Test OpenAI Prompts & Responses",
			"type": "shell",
			"command": "npm test -- test/services/openaiService.regression.test.js --verbose",
			"isBackground": false,
			"problemMatcher": [],
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"clear": true,
				"focus": true
			}
		}
	]
}